{
  "name": "datetime-format",
  "version": "0.0.0",
  "description": "package.json is only use for building the package. see bower.json for more info",
  "main": "dist/datetime-format.min.js",
  "devDependencies": {
    "bourbon": "latest",
    "modernizr-mixin": "latest",
    "mathsass": "latest",
    "jshint": "latest",
    "uglifyjs": "latest"
  },
  "jshintConfig": {
    "globals": {
      "L": false,
      "$": false,
			"jQuery": false,
      "console": false,
      "DEBUG": false,
			"document": false,
			"alert"		: false
    },
    "undef": true,
    "unused": true
  },
  "scripts": {
    "lint": "jshint src/datetime-format.js",
		"build": "uglifyjs src/datetime-format.js -c -m -o dist/datetime-format.min.js",
    "prebuild:js": "npm run lint"
  }
}
